{{!-- template called by inside the category_items.handlebars file to show all the items from the database  for logged in user --}}
{{!-- GUEST THAT IS BROWSING CATEGORY ITEMS PAGE  --}}
<div class="jumbotron text-center my-0 py-3 px-0">
  <h1 class="display-4 font-weight-bold px-0">Shop Items <i class="fas fa-store-alt"></i></h1>
</div>
<div class="row my-3 mx-0" id="item-row">
  {{#each categoryitems}}
<div class="col-10 col-md-6 col-lg-4 mx-auto">
  <div class="card p-1 m-2 text-center shadow-lg rounded-lg">
    <div class="card-header text-secondary px-0 px-0">
      <h4><span class="badge badge-pill badge-primary"> Item: </span> {{dataValues.name}}</h4>
    </div>
    <div class="card-body p-1 font-weight-bold">
      <img src="../images/{{dataValues.image_name}}" class="item-image" alt="Item Display image">
      <p class="card-text">{{dataValues.description}}</p>
      <p class="card-text">ItemID: 
        <span class="badge badge-pill badge-primary py-2 mt-1 mb-0">
          {{dataValues.id}}
        </span>
         | Cost: 
         <span class="badge badge-pill badge-primary py-2 mt-1 mb-0">
           ${{dataValues.price}}
        </span>
      </p>
    </div>
      <div class="card-footer">
        <button disabled type="submit" class="btn badge-pill btn-sm btn-primary add-item stretched-link" data-id="{{dataValues.id}}" data-price="{{dataValues.price}}" value="{{dataValues.id}}"
        data-toggle="tooltip" title="Log in or sign up to add {{dataValues.name}} to your cart.">
         <i class="fas fa-cart-plus"> Log in to add to cart</i>
        </button>
      </div>
  </div>
</div>
  {{/each}}
  <!-- If no items to display show Catch all no items to display card -->
  {{#unless categoryitems}}
    <div class="col-sm-10 col-md-8 col-lg-6 col-xl-4 mx-auto">
      <div class="card p-1 m-2 text-center shadow-lg rounded-lg">
        <div class="card-header text-secondary px-0 px-0">
          <h4> No Items to display</h4>
        </div>

        <div class="card-body p-1 text-lead">
          <p>Sorry! We couldn't find any items currently</p>
        </div>

        <div class="card-footer">
          <a class="btn btn-primary" href="/"><i class="fas fa-store-alt"> Categories View</i></a>
        </div>
      </div>
    </div>
  {{/unless}}
</div>